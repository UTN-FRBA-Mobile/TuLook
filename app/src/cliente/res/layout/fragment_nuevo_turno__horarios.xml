<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.turno.NuevoTurno_HorariosFragment">

        <TextView
            android:id="@+id/txt_peluqueria"
            android:layout_width="match_parent"
            android:text="{{nombre comercio}}"
            android:layout_marginTop="5sp"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="25sp" />

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="Servicios"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txt_servicios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30sp"
                android:paddingLeft="10sp"
                android:layout_marginBottom="5sp"
                android:textSize="15sp"
                tools:text="Corte, Lavado" />

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="Fecha del turno"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:weightSum="2"
                android:layout_marginBottom="5sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15sp"
                    android:paddingLeft="10sp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    tools:text="@tools:sample/date/ddmmyy" />

                <Button
                    android:id="@+id/btn_datepicker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/ic_calendar"
                    android:text="Fecha"
                    />

            </LinearLayout>
        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10sp"
                android:text="Hora del turno"
                android:textSize="20sp"
                android:layout_marginTop="5sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_horarios"
                android:layout_width="match_parent"
                android:layout_marginTop="5sp"
                android:layout_height="wrap_content"

                android:layout_marginBottom="5sp"/>

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Direccion"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="10sp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{{direccion}}"
                android:layout_marginLeft="10sp"
                android:layout_marginBottom="10sp"
                android:textSize="15sp" />

            <Button
                android:id="@+id/btn_solicitar_turno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:text="Solicitar turno" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>