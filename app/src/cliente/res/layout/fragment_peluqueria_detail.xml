<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.PeluqueriaDetailFragment">

    <TextView
        android:id="@+id/peluIdTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fragment Peluquería Detalle"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/peluNameTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fragment Peluquería Detalle"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/peluDireccionTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fragment Peluquería Detalle"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/peluHorarioInicioTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fragment Peluquería Detalle"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/peluHorarioFinTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fragment Peluquería Detalle"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/peluServiciosTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fragment Peluquería Detalle"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/peluRatingTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Fragment Peluquería Detalle"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_nuevo_turno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ir a Solicitar TUrno"></Button>

</LinearLayout>
